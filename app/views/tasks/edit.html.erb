


<div class="row">
  <div class="col-xs-6">
    <%= form_for(@task) do |f| %>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


        <div>
          <%= f.label :status, 'Status' %>
          <%= f.text_field :status, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, 'Task' %>
          <%= f.text_field :content, class: 'form-control', rows: 5 %>
        </div>

        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>

  </div>
</div>
